<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: record) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>