<% provide(:title, "Record") %>

<p>
    ID:
    <%= @record.id %>
</p>
<p>
    Content:
    <%= @record.content %>
</p>
<p>
    User ID:
    <%= @record.user_id %>
</p>


<%= button_to "Back to records", records_path, method: :get, :class => "btn btn-primary"%>
<%= button_to "Edit this record", edit_record_path(@record), method: :get, :class => "btn btn-primary"%>
<%= button_to "Destroy this record", @record, method: :delete , :class => "btn btn-primary"%>